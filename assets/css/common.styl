@import 'nib'

global-reset()

html
body
	overflow hidden
	background #cfcdcd
	font-family 'Montserrat', sans-serif
	color #333333

a   								
	text-decoration none 
	color #333333

#main_container
h1
	text-align center
	margin 80px auto 50px

#main_container h1
	font-size 62px

#github_account
	margin 15px

#main_container a:hover 			
	text-decoration underline

.hide
	display none

.whole-box
	overflow hidden
	position fixed

#modalbox2
	background red

#modalbox2 p
	padding 10px
	color #fff
	font-size 12px
	font-weight normal
	line-height 1.5

.box-overlay
	background black
	width 100%
	height 100%
	position absolute
	opacity	0.9
	top 0
	left 0

.close-btn
	cursor pointer
	position absolute

.click_btn
	color #aaa
	font-size 13px
	font-weight 700
	background #fff
	margin 10px 10px 20px
	padding 0px 20px
	line-height 50px;
	height 50px
	width 180px
	border none
	box-shadow 0 3px 0 rgba(0,0,0,0.1);
	cursor pointer

#github-logo 						
	width 228px
	height 90px
	margin 0 auto
	margin-top 50px